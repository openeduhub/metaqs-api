version: '3.7'

services:

  nginx:
    ports:
      - "${PORT}:80"
    volumes:
      - ./nginx/nginx.conf.template:/etc/nginx/templates/default.conf.template:ro

  fastapi:
    environment:
      - LOG_LEVEL=debug
    volumes:
      - ./:/app
    command: uvicorn app.main:app --reload --host 0.0.0.0 --port 80 --log-level debug

  elasticsearch:
    ports:
      - "9200:9200"

  kibana:
    ports:
      - "5601:5601"
